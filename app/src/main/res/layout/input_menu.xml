<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabs"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="667dp"
        android:layout_marginBottom="16dp"
        android:background="@color/colorPrimary"
        android:clipChildren="false"
        android:textAllCaps="true"
        android:textColor="@color/colorHeadings"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tabIndicatorColor="@color/colorIcons"
        app:tabTextColor="@color/colorFonts">


        <com.google.android.material.tabs.TabItem
            android:id="@+id/cards_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CARDS"
            android:textAllCaps="true"
            android:textColor="@color/colorHeadings" />


        <com.google.android.material.tabs.TabItem
            android:id="@+id/menu_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="INPUT"
            android:textAllCaps="true"
            android:textColor="@color/colorHeadings" />

    </com.google.android.material.tabs.TabLayout>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/newVocab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="201dp"
        android:layout_marginBottom="485dp"
        android:hint="vocabulary entry"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/newVocabTranslation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="343dp"
        android:layout_marginBottom="343dp"
        android:layout_weight="1"
        android:hint="translation"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/save_vocab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="498dp"
        android:layout_marginEnd="291dp"
        android:layout_marginBottom="185dp"
        android:background="@color/colorPrimary"
        android:stateListAnimator="@null"
        android:text="Save"
        android:textAllCaps="true"
        android:textColor="@color/colorHeadings"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/save_vocab_from_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="176dp"
        android:layout_marginTop="498dp"
        android:layout_marginEnd="75dp"
        android:layout_marginBottom="185dp"
        android:background="@color/colorPrimary"
        android:stateListAnimator="@null"
        android:text="Load Vocabulary File"
        android:textAllCaps="true"
        android:textColor="@color/colorHeadings"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>